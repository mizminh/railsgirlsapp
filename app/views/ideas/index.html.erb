<h1>Listing ideas</h1>

<p><%= @ideas.count %> ideas</p>

<% @ideas.each do |idea| %>

  <div class="row">
    <div class="span4">
      <%= image_tag idea.picture_url, :width => '100%' if idea.picture.present?%>
      <h4><%= link_to idea.name, idea %></h4>
      <%= idea.description %>
    </div>
  </div>

<% end %>

<br/>
